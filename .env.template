# Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
DB_URL=jdbc:mysql://127.0.0.1:3306/disaster_assistant?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_USERNAME=root
DB_PASSWORD=your_password_here


# AI Server Configuration
AI_SERVER_URL=http://127.0.0.1:8081/api/ai

# Earthquake API Configuration
EARTHQUAKE_API_POLLING_INTERVAL=60000
EARTHQUAKE_API_URL=https://earthquake.usgs.gov/fdsnws/event/1/query
EARTHQUAKE_API_MIN_MAGNITUDE=4.0

# Security Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_EXPIRATION=86400000
